rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // -----------------------------------------------------------------------
    // /users/{uid}
    // Users can read and write only their own document.
    // -----------------------------------------------------------------------
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // -----------------------------------------------------------------------
    // /config/{docId}
    // Publicly readable (contains service URLs like the ESPN proxy endpoint).
    // Not writable from the client.
    // -----------------------------------------------------------------------
    match /config/{docId} {
      allow read: if true;
    }

    // -----------------------------------------------------------------------
    // /leagues/{leagueId}
    // Publicly readable (privacy defaults to public for Phase 1).
    // Only the editor (editorUid) or co-editors can write.
    // -----------------------------------------------------------------------
    match /leagues/{leagueId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null
        && (resource.data.editorUid == request.auth.uid
            || request.auth.uid in resource.data.coEditorUids);

      // ---------------------------------------------------------------------
      // /leagues/{leagueId}/newsletters/{weekNumber}
      // Publicly readable. Writable by league editor or co-editors.
      // ---------------------------------------------------------------------
      match /newsletters/{weekNumber} {
        allow read: if true;
        allow write: if request.auth != null
          && (get(/databases/$(database)/documents/leagues/$(leagueId)).data.editorUid == request.auth.uid
              || request.auth.uid in get(/databases/$(database)/documents/leagues/$(leagueId)).data.coEditorUids);
      }

      // ---------------------------------------------------------------------
      // /leagues/{leagueId}/weekData/{weekNumber}
      // Publicly readable. Writable by league editor or co-editors.
      // ---------------------------------------------------------------------
      match /weekData/{weekNumber} {
        allow read: if true;
        allow write: if request.auth != null
          && (get(/databases/$(database)/documents/leagues/$(leagueId)).data.editorUid == request.auth.uid
              || request.auth.uid in get(/databases/$(database)/documents/leagues/$(leagueId)).data.coEditorUids);
      }
    }

    // -----------------------------------------------------------------------
    // /leaderboards/{docId}
    // Publicly readable. Not writable from the client (managed via console).
    // TODO: Add write rules when admin UI is built.
    // -----------------------------------------------------------------------
    match /leaderboards/{docId} {
      allow read: if true;
    }

    // -----------------------------------------------------------------------
    // /leaderboard-results/{docId}
    // Publicly readable. Anyone can submit results (no auth required per
    // current Submit modal behavior). Tighten to authenticated-only later.
    // TODO: Require auth and validate submission shape.
    // -----------------------------------------------------------------------
    match /leaderboard-results/{docId} {
      allow read: if true;
      allow create: if true;
    }

    // -----------------------------------------------------------------------
    // /leaderboard-times/{docId}
    // Publicly readable (Eaterboard page). Not writable from the client.
    // -----------------------------------------------------------------------
    match /leaderboard-times/{docId} {
      allow read: if true;
    }

    // -----------------------------------------------------------------------
    // /submissions/{docId}
    // Write-only from the client (anonymous newsletter submissions).
    // Not readable from the client â€” reviewed via Firebase console.
    // TODO: Require auth or rate-limit to prevent spam.
    // -----------------------------------------------------------------------
    match /submissions/{docId} {
      allow create: if true;
    }

    // -----------------------------------------------------------------------
    // /survivorPicks/{docId}
    // Publicly readable (leaderboard views). Authenticated users can create
    // and update picks. No deletes from client.
    // TODO: Restrict writes to own picks (requires userId field validation).
    // -----------------------------------------------------------------------
    match /survivorPicks/{docId} {
      allow read: if true;
      allow create, update: if request.auth != null;
    }
  }
}
